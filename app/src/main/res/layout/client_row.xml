<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/client_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ID: "
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.142" />

            <TextView
                android:id="@+id/client_full_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_id_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="ПІБ: " />

            <TextView
                android:id="@+id/client_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_full_name_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Електронна пошта: " />

            <TextView
                android:id="@+id/client_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_email_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Телефон: " />

            <TextView
                android:id="@+id/client_additional_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_phone_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Додаткова контактна інформація: " />

            <TextView
                android:id="@+id/client_company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_additional_info_text"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Компанія: " />

            <TextView
                android:id="@+id/client_website_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_company_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Вебсайт: " />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>