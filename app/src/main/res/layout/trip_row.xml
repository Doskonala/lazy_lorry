<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/trip_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ID: "
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.142" />

            <TextView
                android:id="@+id/order_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/trip_id_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="ID замовлення: " />

            <TextView
                android:id="@+id/lorry_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/order_id_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Номер вантажівки: " />

            <TextView
                android:id="@+id/driver_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lorry_number_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Номер посвідчення водія: " />

            <TextView
                android:id="@+id/driver_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/driver_number_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="ПІБ водія: " />

            <TextView
                android:id="@+id/origin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/driver_name_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Місце відправки: " />

            <TextView
                android:id="@+id/destination_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/origin_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Місце призначення: " />

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/destination_text"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Відстань: " />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/distance_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Дата: " />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/date_text"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Час: " />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>