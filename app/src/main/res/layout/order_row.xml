<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/order_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="ID: "
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.142" />

            <TextView
                android:id="@+id/order_group_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/order_id_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Група вантажу: " />

            <TextView
                android:id="@+id/order_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/order_group_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Тип вантажу: " />

            <TextView
                android:id="@+id/order_transportation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/order_type_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Спосіб перевезення: " />

            <TextView
                android:id="@+id/client_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/order_transportation_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="ID замовника: " />

            <TextView
                android:id="@+id/client_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_id_text"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="ПІБ замовника: " />

            <TextView
                android:id="@+id/order_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_name_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Оголошена вартість вантажу: " />

            <TextView
                android:id="@+id/partner_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/order_value_text"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="ID партнера: " />

            <TextView
                android:id="@+id/partner_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/partner_id_text"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="ПІБ партнера: " />

            <TextView
                android:id="@+id/partner_company_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/partner_name_text"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="Партнерська компанія: " />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>